/* components/playList/playList.wxss */
.list-item{
    width: 220rpx;
    position: relative;
}
image{
    width: 100%;
    height: 220rpx;
}
.title{
    width: 220rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    padding: 10rpx;
}

.count {
    position: absolute;
    right: 10rpx;
    top:10rpx;
    color:#fff;
    font-size: 24rpx;

}
.count image{
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}
